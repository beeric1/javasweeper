<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mine.TopController">
<menus>
    <Menu mnemonicParsing="false" text="Game">
        <items>
            <MenuItem fx:id="newgame" mnemonicParsing="false" text="New" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="exitgame" mnemonicParsing="false" onAction="#exitGame" text="Exit" />
        </items>
    </Menu>
    <Menu mnemonicParsing="false" text="Difficulty">
        <items>
            <MenuItem fx:id="low" mnemonicParsing="false" text="Low" />
            <MenuItem fx:id="medium" mnemonicParsing="false" text="Medium" />
            <MenuItem fx:id="high" mnemonicParsing="false" text="High" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="custom" mnemonicParsing="false" text="Custom" />
        </items>
    </Menu>
</menus>
</MenuBar>
