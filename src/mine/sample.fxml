<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="border" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mine.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Game">
            <items>
              <MenuItem fx:id="newgame" mnemonicParsing="false" text="New" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="exitgame" mnemonicParsing="false" text="Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Difficulty">
            <items>
              <MenuItem fx:id="low" mnemonicParsing="false" text="Low" />
                  <MenuItem fx:id="medium" mnemonicParsing="false" text="Medium" />
                  <MenuItem fx:id="high" mnemonicParsing="false" text="High" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="custom" mnemonicParsing="false" text="Custom" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox prefHeight="0.0" prefWidth="200.0" spacing="2.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <HBox prefHeight="100.0" prefWidth="80.0" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Mines left:" />
                  <Text fx:id="mines" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="0.0" spacing="5.0">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Time:" />
                  <Text fx:id="time" strokeType="OUTSIDE" strokeWidth="0.0" text="0" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
